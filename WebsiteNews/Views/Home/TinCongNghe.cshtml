@using WebsiteNews.Models;
@model List<tbTinTuc>
<div class="maghny-grids-inf row">
    @foreach (var item in Model)
    {
        <div class="maghny-gd-1 col-md-6">
            <a href="@Url.Action("XemChiTiet","XemChiTiet", new { matintuc = item.MaTinTuc})">
                <div class="maghny-grid">
                    <figure class="effect-lily">
                        <img class="img-fluid" src="~/Content/Layout_NguoiDung/images/@item.AnhTinTuc">
                        <figcaption>
                            <div>
                                <h4> @item.tbLoaiTinTuc.TenLoaiTin</h4>
                                <p>@item.NgayDangTinTuc.Value.DayOfYear </p>
                            </div>

                        </figcaption>
                    </figure>
                </div>
                <h5>
                    <a href="#">
                        @item.TenTinTuc
                    </a>
                </h5>
                <p class="RutNgan">@item.NoiDungTinTuc</p>
            </a>
            <div class="mag-post-meta">
                <a href="#">
                    <img src="~/Content/Layout_NguoiDung/images/@item.tbNguoiDung.AnhNguoiDung"
                         class="img-fluid rounded-circle admin-img admin-img1" alt="">
                </a><span class="meta-author">
                    <span>&nbsp;</span><a href="#" class="author-name">
                        @item.tbNguoiDung.TenNguoiDung
                    </a>
                </span>
                <span class="author-date">[ @item.NgayDangTinTuc.Value.TimeOfDay ]</span>
            </div>
        </div>
    }
</div>
