@model WebsiteNews.Models.tbNguoiDung

@{
    ViewBag.Title = "TaoTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TaoTaiKhoan</h2>

@using (Html.BeginForm("TaoTaiKhoan", "TaiKhoanNguoiDung", FormMethod.Post, new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <span>Tên người dùng</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TenNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span>Email</span>
        <div class="col-md-10">
            <input name="EmailNguoiDung" type="email" placeholder="Nhập Email" class="form-control"/>
        </div>
        <span style="color:red">@ViewBag.thongbao1</span>
    </div>

    <div class="form-group">
        <span>Mật khẩu</span>
        <div class="col-md-10">
            <input name="MatKhauNguoiDung" type="password" placeholder="Nhập mật khẩu" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <span>Nhập lại mật khẩu</span>
        <div class="col-md-10">
            <input name="NhapLaiMatKhauNguoiDung" type="password" placeholder="Nhập lại mật khẩu" class="form-control" />
        </div>
        <b style="color:red">@ViewBag.thongbao</b>
    </div>

    <div class="form-group">
        <span>Địa chỉ người dùng</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.DiaChiNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DiaChiNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span>SDT người dùng</span>
        <div class="col-md-10">
            @Html.EditorFor(model => model.SDTNguoiDung, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SDTNguoiDung, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <span>Ảnh người dùng</span>
        <div class="col-md-10">
            <input type="file" class="form-control" name="fileUpload" />
        </div>
        <b style="color:red">@ViewBag.thongbao2</b>
    </div>
    <input type="hidden" name="SoTinDang" value="0" />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Oke" class="btn btn-default" />
        </div>
    </div>
</div>
}
