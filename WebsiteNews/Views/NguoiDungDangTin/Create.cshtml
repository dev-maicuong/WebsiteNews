@using WebsiteNews.Models
@model WebsiteNews.Models.tbTinTuc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    tbNguoiDung nd = (tbNguoiDung)Session["nguoidung"];
}
@using (Html.BeginForm("Create","NguoiDungDangTin", FormMethod.Post,new { @enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <b>Tên Tin tức</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenTinTuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Loại tin tức</b>
            <div class="col-md-10">
                @Html.DropDownList("MaLoaiTinTuc", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MaLoaiTinTuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Nội dung tin tức</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NoiDungTinTuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDungTinTuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <input type="hidden" name="MaNguoiDung" value="@nd.MaNguoiDung" />

        <div class="form-group">
            <b>Ảnh tin tức</b>
            <div class="col-md-10">
                <input type="file" class="form-control" name="fileUpload" required />
            </div>
        </div>

        <div class="form-group">
            <b>Ifram Video</b>
            <div class="col-md-10">
                @Html.EditorFor(model => model.IfrVideo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IfrVideo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <b>Video</b>
            <div class="col-md-10">
                <input type="file" class="form-control" name="fileUploadVideo" required />
            </div>
        </div>

        <div class="form-group">
            <b>Trạng thái tin</b>
            <div class="col-md-10">
                <div class="checkbox">
                    <select name="TrangThaiTin" p>
                        <option>Chọn trạng thái cho tin</option>
                        <option value="True">Mở tin</option>
                        <option value="False">Đóng tin</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng tin" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
